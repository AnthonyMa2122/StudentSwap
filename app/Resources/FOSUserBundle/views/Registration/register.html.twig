{% extends 'FOSUserBundle::layout.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}Register{% endblock %}

{% block fos_user_content %}
    <!--REGISTER-->
    <br>
    <br>

    <div class="container">
    <h1 class="registerform">Register Form</h1>
    <div class="registercontainer">
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
        <div class="registercontainerform">
            <p class="requiredfield"><span class="error" style="color: red">* required field.</span></p>
            <div class="form-group">
            <div class="name">
                <label class="name"><b>Name:</b></label>
                <div class="first">
                {{ form_label(form.firstName, 'First', {'label_attr': {'class': 'first'}}) }}
                {{ form_widget(form.firstName, {'attr': {'class': 'box', 'placeholder': 'Enter First Name'}}) }}
                <span class="error" style="color: red">*</span>
                {{ form_errors(form.firstName) }}
                </div>
                </div>
                <br>
                <br>
                <div class="form-group">
                    <div class="last">
                {{ form_label(form.firstName, 'Last', {'label_attr': {'class': 'last'}}) }}
                {{ form_widget(form.lastName, {'attr': {'class': 'box', 'placeholder': 'Enter Last Name'}}) }}
                <span class="error" style="color: red">*</span>
                {{ form_errors(form.lastName) }}
                    </div>
                </div>
            </div>
            <br>
            <hr>
            <br>
            <div class="form-group">
            <div class="phone">

                {{ form_label(form.phoneNumber, 'Phone:', {'label_attr': {'class': 'phone'}}) }}
                {{ form_widget(form.phoneNumber, {'attr': {'class': 'box', 'placeholder': 'Enter Phone #(xxxxxxxxxx)'}}) }}
                <span class="error" style="color: red">*</span>
                {{ form_errors(form.phoneNumber) }}
            </div>
            </div>
            <br>
            <div class="form-group">
            <div class="email">
                {{ form_label(form.email, 'Email:', {'label_attr': {'class': 'email'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'box', 'placeholder': 'Enter Email' }}) }}
                <span class="error" style="color: red">*</span>
                {{ form_errors(form.email) }}
            </div>
            </div>
            <br>
            <div class="form-group">
            <div class="psw">
                {{ form_label(form.plainPassword, 'Password:', {'label_attr': {'class': 'pw'}}) }}
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'box', 'placeholder': 'Enter Password' }}) }}
                <span class="error" style="color: red">*</span>
                {{ form_errors(form.plainPassword) }}
            </div>
            </div>
            <br>
            <div class="form-group">
            <div class="rpsw">
                {{ form_label(form.plainPassword, 'Repeat Password:', {'label_attr': {'class': 'rpw'}}) }}
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'box', 'placeholder': 'Enter Password' }}) }}
                <span class="error" style="color: red">*</span>
            </div>
            </div>
            <br>
            <hr>
            <br>

            <label class="checkbox"><input class="text-center" type="checkbox" checked="checked"> Remember me</label>

            <p class="terms">By creating an account you agree to our <a href={{ path('terms') }}>Terms & Privacy</a>.</p>
            <br>

            <div class="clearfix">
                <input type="submit" class="btn btn-info" value="{{ 'Register'|trans }}"></input>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
    </div>
{% endblock %}