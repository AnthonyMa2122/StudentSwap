{% extends 'base.html.twig' %}
{% block clothes %}
    <br>
    <br>
    <br>
    <br>
    <h1 class="text-center">Clothes</h1>
    <br>
    {% for item in clothes %}
        <!-- Left-aligned media object -->
        <div class="media">
            <div class="media-left">
                <a href="#"><h3 class="media-heading">{{ item.title }}</h3></a>
                <a href="#"><img
                            src= {{ asset( item.imageUrl ) }}
                            class="media-object" style="width:110px"
                            alt="https://s-media-cache-ak0.pinimg.com/564x/2a/63/18/2a6318292b3963368a5be80f113016f2.jpg">
                </a>
            </div>
            <div class="media-body">
                <p><b>Description:</b> {{ item.description }}</p>
                <p>Price: {{ item.price }}</p>
                <p><a href="#" class="btn btn-info" role="button">BUY ITEM<span
                                class="glyphicon glyphicon-shopping-cart"></span></a></p>
            </div>
        </div>
        <hr>
    {% endfor %}
{% endblock %}