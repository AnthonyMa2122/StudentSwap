{% extends 'base.html.twig' %}
{% block services %}
    <br>
    <br>
    <br>
    <br>
    <h1 class="text-center">Services</h1>
    <br>
    <!-- Left-aligned media object -->
    {% for item in service %}
        <div class="media">
            <div class="media-left">
                <a href="#"><h3 class="media-heading">{{ item.title }}</h3></a>
                <a href="#"><img src={{ asset( item.imageUrl ) }}
                                 class="media-object" style="width:157px"
                                 alt="http://i.ebayimg.com/images/g/l6IAAOxyUrZS64di/s-l400.jpg">
                </a>
            </div>
            <div class="media-body">
                <p><b>Description:</b> {{ item.description }}</p>
                <p>Price: {{ item.price }}</p>
                <p><a href="#" class="btn btn-info" role="button">REQUEST<span class="glyphicon glyphicon-list-alt"></span></a></p>
            </div>
        </div>
        <hr>
    {% endfor %}
{% endblock %}