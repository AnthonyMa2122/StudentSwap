                    <br>
                <button class="text-center" type="button">
                    <a href="{{ path('homeLoggedIn') }}">Login</a>
                </button><br>
                </div>
            <div class="container" style="background-color:#f1f1f1">
                <button type="button" class="registerbtn" >
                    <a href="{{ path('register') }}">Register<span class="glyphicon glyphicon-pencil"></span></a>
                </button>
                <span class="psw">Forgot <a href="#">password?</a></span>
            </div>
        </form>
    </div>

{% endblock %}
